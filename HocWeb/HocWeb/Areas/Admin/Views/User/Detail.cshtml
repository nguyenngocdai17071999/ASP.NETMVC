@model Models.Framwork.User

@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutView.cshtml";
}
@section header{

}
@section jsFooter{
    <script>

        $('#btnSelectImage').on('click', function (e) {
            e.preventDefault();
            var finder = new CKFinder();
            finder.selectActionFunction = function (url) {
                $('#txtImage').val(url);
            };
            finder.popup();
        })

    </script>
}
@using (Html.BeginForm(Html.BeginForm("Detail", "User", FormMethod.Post)))
{

    @Html.AntiForgeryToken()
    <div class="container-fluid">
        @Html.HiddenFor(model => model.UserID)

        <div class="form-group row">
            <div class="col-sm-3 mb-1 mb-sm-0">
                <p>  FirstName</p>
                @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control form-control-user" })
            </div>
            <div class="col-sm-3 ">
                <p>  LastName</p>
                @Html.TextBoxFor(model => model.LastName, new { @class = "form-control form-control-user" })
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-3 mb-1 mb-sm-0">
                <p>  Địa chỉ</p>
                @Html.TextBoxFor(model => model.Address, new { @class = "form-control form-control-user" })

            </div>
            <div class="col-sm-3 ">
                <p>  Số điện thoại</p>
                @Html.TextBoxFor(model => model.Phone, new { @class = "form-control form-control-user" })
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-3 mb-1 mb-sm-0">
                <p>  Địa chỉ Email</p>
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control form-control-user" })
            </div>
            <div class="col-sm-3 ">
                <p>  Số chứng minh nhân dân</p>
                @Html.TextBoxFor(model => model.CMND, new { @class = "form-control form-control-user" })
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-3 mb-1 mb-sm-0">


                @Html.HiddenFor(model => model.Avatar, new { htmlAttributes = new { @class = "form-control", @id = "txtImage", @type = "hide" }, id = "txtImage" })
                <a id="btnSelectImage">
                    <img src="@Html.ValueFor(model=>model.Avatar)" alt="Ảnh đại diện   " width="200px" height="200px" />
                </a>
            </div>


        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" style="width:100px;" />
            </div>
        </div>
    </div>

}


