@model  IEnumerable<Models.Framwork.Product>
@{
    ViewBag.Title = "XuatSanPham";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutView.cshtml";
}

@section header{

}
@section jsFooter{

    <script src="~/Assets/Admin/js/controller/productcontroller.js"></script>
}
<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="m-0 font-weight-bold text-primary">Danh sách sản phẩm</h1>
    <div>
        <a class="btn btn-primary" href="/Admin/Product/Create"> Thêm mới </a>
    </div>
    <br />

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Code</th>
                                <th>Price</th>
                                <th>BrandName</th>
                                <th>CategoryName</th>
                                <th>Quantity</th>
                                <th>ViewCount</th>
                                <th>CreatedDate</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                if (item.ID < 5)
                                {
                                    <tr>
                                        <td>@item.ID</td>
                                        <td>@item.Name</td>
                                        <td>@item.Code</td>
                                        <td>@item.Price</td>
                                        <td>@item.Brand.Name</td>
                                        <td>@item.ProductCategory.Name</td>
                                        <td>@item.Quantity</td>
                                        <td>@item.ViewCount</td>
                                        <td>@item.CreatedDate</td>
                                    </tr>
                                }
                                else
                                {
                                    <tr>
                                        <td>@item.ID</td>
                                        <td>@item.Name</td>
                                        <td>@item.Code</td>
                                        <td>@item.Price</td>
                                        <td>@item.Brand.Name</td>
                                        <td>@item.ProductCategory.Name</td>
                                        <td>@item.Quantity</td>
                                        <td>@item.ViewCount</td>
                                        <td>@item.CreatedDate</td>
                                    </tr>
                                }
                            }

                        </tbody>
                    </table>
                    <br /><br />
                    <a href="@Url.Action("Export","Product")">Excel Export</a>
                </div>
            </div>
        </div>
    </div>
</div>