@using Models.Framwork;
@model  List<Product> 

<div class="maincontent-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="latest-product">
                    <h2 class="section-title">Sale products</h2>
                    <div class="product-carousel">
                        @foreach (var item in Model)
                        {
                        <div class="single-product">
                            <div class="product-f-image">
                                <img src="@item.Image" width="40" height="60" alt="">
                                <div class="product-hover">
                                    <a href="@Url.Action("AddItem","GioHang", new { @productID=item.ID , @quantity=1 })" class="add-to-cart-link"><i class="fa fa-shopping-cart"></i> Add to cart</a>
                                    <a href="@Url.Action("XemChiTiet","ChiTiet", new { @productID = item.ID })" class="view-details-link"><i class="fa fa-link"></i> See details</a>
                                </div>
                            </div>

                            <h2><a href="@Url.Action("XemChiTiet","ChiTiet", new { @productID = item.ID })" >@item.Name</a></h2>

                            <div class="product-carousel-price">
                                <ins>@item.PromotionPrice</ins> <del>@item.Price</del>
                            </div>
                        </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> <!-- End main content area -->
